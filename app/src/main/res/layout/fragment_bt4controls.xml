<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Switch
        android:id="@+id/adapter_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5sp"
        android:text="Adapter"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/scan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bluetooth_adapter"
        android:layout_marginBottom="5sp"
        android:text="Scanning"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/advertise_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scan_button"
        android:layout_marginBottom="5sp"
        android:text="Advertising"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/gatt_server_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/advertise_button"
        android:layout_marginBottom="5sp"
        android:text="Gatt-Server"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/linLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gatt_server_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ble_mac_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:text="BLE Address"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ble_connect_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:text="Num: 0"
            android:textAlignment="textEnd"
            android:textSize="16sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/discovered_devices_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/gatt_server_button"
        android:focusable="true" />

</LinearLayout>
