<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bt4controls_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bt4controls" />

    <Switch
        android:id="@+id/discover_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bt4controls_text"
        android:textSize="16sp"
        android:layout_marginBottom="5sp"
        android:text="Discovering" />

    <Switch
        android:id="@+id/advertise_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discover_button"
        android:textSize="16sp"
        android:layout_marginBottom="5sp"
        android:text="Advertising" />

    <Switch
        android:id="@+id/gatt_server_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/advertise_button"
        android:textSize="16sp"
        android:layout_marginBottom="5sp"
        android:text="Gatt-Server" />

    <TextView
        android:text="BLE Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gatt_server_button"
        android:textSize="16sp"
        android:layout_marginBottom="5sp"
        android:id="@+id/ble_mac_address" />

    <ListView
        android:id="@+id/discovered_devices_list"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ble_mac_address" />

</LinearLayout>
