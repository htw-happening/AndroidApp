<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/bluetooth_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Bluetooth" />

    <TextView
        android:id="@+id/bluetooth_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <Switch
        android:id="@+id/switch_bluetooth_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:splitTrack="true" />

    <TextView
        android:id="@+id/bluetooth_le_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bluetooth_label"
        android:layout_marginTop="10dp"
        android:text="Bluetooth Le" />

    <TextView
        android:id="@+id/bluetooth_le_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bluetooth_le_label"
        android:layout_alignLeft="@+id/bluetooth_value"
        android:text="TextView" />

    <TextView
        android:id="@+id/bluetooth_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bluetooth_le_label"
        android:layout_marginTop="10dp"
        android:text="Bluetooth Address" />

    <TextView
        android:id="@+id/bluetooth_address_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bluetooth_address_label"
        android:layout_alignLeft="@+id/bluetooth_value"
        android:text="TextView" />

    <TextView
        android:id="@+id/bluetooth_le_adv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bluetooth_address_label"
        android:layout_marginTop="10dp"
        android:text="Bluetooth\nAdvertising" />

    <TextView
        android:id="@+id/bluetooth_le_adv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bluetooth_le_adv_label"
        android:layout_alignLeft="@+id/bluetooth_value"
        android:text="TextView" />

    <Space
        android:id="@+id/spacer_bt"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/bluetooth_le_adv_label"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/wifi_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spacer_bt"
        android:layout_marginTop="10dp"
        android:text="WifiDirect" />

    <TextView
        android:id="@+id/wifi_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/wifi_label"
        android:layout_alignLeft="@+id/bluetooth_value"
        android:text="TextView" />

    <Switch
        android:id="@+id/switch_wifi_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/wifi_label"
        android:layout_alignParentRight="true"
        android:splitTrack="true" />

    <TextView
        android:id="@+id/background_service_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wifi_label"
        android:layout_marginTop="10dp"
        android:text="Background Service" />

    <TextView
        android:id="@+id/background_service_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/background_service_label"
        android:layout_alignLeft="@+id/bluetooth_value"
        android:text="TextView" />

    <Switch
        android:id="@+id/switch_background_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/background_service_label"
        android:layout_alignParentRight="true"
        android:splitTrack="true" />

    <Button
        android:id="@+id/button_get_data_from_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Data from Service"
        android:layout_below="@+id/background_service_label"
        android:layout_alignParentStart="true" />

</RelativeLayout>
